<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1A6A6"
    tools:context=".interfaz.VistaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#8F2626"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/body"
            app:layout_constraintVertical_weight="0.75"/>

        <View
            android:id="@+id/body"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#ABABAB"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/menu"
            app:layout_constraintVertical_weight="1"/>

        <View
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#212121"
            app:layout_constraintTop_toBottomOf="@+id/body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="0.3"/>





        <ImageView
            android:id="@+id/foto"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@drawable/pokeball_background"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@null" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:background="@drawable/borde"
            android:gravity="center"
            android:text="nombre"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="248dp"
            android:layout_height="101dp"
            android:background="@drawable/borde"
            android:text="DESCRIPCION"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/botonPrev"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombre"/>


        <ImageView
            android:id="@+id/botonPrev"
            android:layout_width="120dp"
            android:layout_height="89dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/botonNext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu"
            app:srcCompat="@drawable/pokeball_open_left" />

        <ImageView
            android:id="@+id/botonNext"
            android:layout_width="120dp"
            android:layout_height="89dp"
            app:srcCompat="@drawable/pokeball_open_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/botonPrev"
            app:layout_constraintTop_toTopOf="@+id/menu"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>